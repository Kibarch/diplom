<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3D3D3D"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill"
    android:layout_gravity="clip_horizontal|clip_vertical"
    tools:ignore="UseCompoundDrawables"
    tools:context=".KorzinaActivity">


    <LinearLayout
        android:id="@+id/hatKorzina"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#616161"
        android:orientation="horizontal"
        android:layout_gravity="top">
        <ImageView
            android:id="@+id/arr"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:scaleX="-1"
            android:layout_weight="1"
            android:contentDescription="NULL"
            android:src="@drawable/arrow"/>
        <TextView
            android:id="@+id/titleM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/korzina_name"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:layout_weight="2"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/chat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="NULL"
            android:focusable="true"
            android:onClick="techClicked"
            android:src="@drawable/chat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zakaz1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/hatKorzina"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginStart="25dp"
            android:gravity="top|center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/topcornerslightggrayroundedbackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Пятерочка"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="#8D8D8D">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Адрес магазина: ул. Нагибина, 113"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="3"
                android:columnCount="3"
                android:rowCount="3">
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="Сметана"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="#8D8D8D"
                    android:layout_row="0"
                    android:layout_column="0"/>

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:background="#8D8D8D"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:text="Йогурт"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="Хлеб"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bottomleftcornerslightgrayroundedbackground"
                    android:layout_row="2"
                    android:layout_column="0"/>
                <TextView
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:text="1 шт."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="#8D8D8D"
                    android:layout_row="0"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:text="3 шт."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="#8D8D8D"
                    android:layout_row="1"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:text="2 шт."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="#8D8D8D"
                    android:layout_row="2"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="100 руб."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="@color/darkthemebackgroundcolor"
                    android:layout_row="0"
                    android:layout_column="2"/>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="150 руб."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="@color/darkthemebackgroundcolor"
                    android:layout_row="1"
                    android:layout_column="2"/>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="50 руб."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="@drawable/bottomrightcornerdarkthemeroundedbackground"
                    android:layout_row="2"
                    android:layout_column="2"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/topcornerslightggrayroundedbackground"
                android:text="Сумма:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/bottomcornersdarkthemeroundedbackground"
                android:text="300 руб."
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zakaz2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/zakaz1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:layout_marginStart="25dp"
            android:gravity="top|center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/topcornerslightggrayroundedbackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Магнит"
                    android:layout_marginStart="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="#8D8D8D">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Адрес магазина: ул. Космонавтов,  44"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="3"
                android:columnCount="3"
                android:rowCount="3">
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="Кетчуп"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="#8D8D8D"
                    android:layout_row="0"
                    android:layout_column="0"/>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="Огурцы"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="#8D8D8D"
                    android:layout_row="1"
                    android:layout_column="0"/>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="Колбаса"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/bottomleftcornerslightgrayroundedbackground"
                    android:layout_row="2"
                    android:layout_column="0"/>
                <TextView
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:text="шт/кг"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="#8D8D8D"
                    android:layout_row="0"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:text="0.5 кг."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="#8D8D8D"
                    android:layout_row="1"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="62dp"
                    android:layout_height="40dp"
                    android:text="1 шт."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:shadowColor="#000000"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="10"
                    android:textColor="#FFFFFF"
                    android:background="#8D8D8D"
                    android:layout_row="2"
                    android:layout_column="1"/>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="150 руб."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="@color/darkthemebackgroundcolor"
                    android:layout_row="0"
                    android:layout_column="2"/>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="200 руб."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="@color/darkthemebackgroundcolor"
                    android:layout_row="1"
                    android:layout_column="2"/>
                <TextView
                    android:layout_width="94dp"
                    android:layout_height="40dp"
                    android:text="350 руб."
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="@drawable/bottomrightcornerdarkthemeroundedbackground"
                    android:layout_row="2"
                    android:layout_column="2"/>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp">
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/topcornerslightggrayroundedbackground"
                android:text="Сумма:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/bottomcornersdarkthemeroundedbackground"
                android:text="700 руб."
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/menuKorzina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#616161"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mag"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:contentDescription="NULL"
                android:focusable="true"
                android:onClick="magClicked"
                android:src="@drawable/map" />
            <TextView
                android:id="@+id/textMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:textColor="#000000"
                android:text="@string/magazini_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mag_to_cat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:onClick="catClicked"
                android:contentDescription="NULL"
                android:src="@drawable/catalog"/>
            <TextView
                android:id="@+id/textCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="@string/catalog_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:background="@drawable/allcornersdarkthemeroundedbackground"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mag_to_kor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="NULL"
                android:src="@drawable/korzina"/>
            <TextView
                android:id="@+id/textKor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="@string/korzina_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mag_to_ak"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:onClick="akClicked"
                android:contentDescription="NULL"
                android:src="@drawable/akzii"/>
            <TextView
                android:id="@+id/textAkz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="@string/akcii_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mag_to_prof"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:onClick="profClicked"
                android:contentDescription="NULL"
                android:src="@drawable/profile"/>
            <TextView
                android:id="@+id/textPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:text="@string/profil_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>