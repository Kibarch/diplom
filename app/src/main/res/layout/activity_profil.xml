<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3D3D3D"
    android:gravity="fill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="UseCompoundDrawables"
    tools:context=".ProfilActivity">


    <LinearLayout
        android:id="@+id/hatProfil"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="#616161"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="top">
        <ImageView
            android:id="@+id/arr"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:scaleX="-1"
            android:layout_weight="1"
            android:contentDescription="NULL"
            android:src="@drawable/arrow"/>
        <TextView
            android:id="@+id/titleM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/profil_name"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:layout_weight="2"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/tech"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/techsupport_name"
            android:focusable="true"
            android:src="@drawable/chat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Prodilinfo"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="start"
        android:layout_gravity="end"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/hatProfil"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/imageProfil"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="21dp"
            android:contentDescription="NULL"
            app:layout_constraintTop_toBottomOf="@+id/hatProfil"
            app:layout_constraintEnd_toStartOf="@+id/imaFamilia"
            android:src="@drawable/image1"/>

        <TextView
            android:id="@+id/imaFamilia"
            android:layout_width="170dp"
            android:layout_height="130dp"
            android:background="@drawable/allcornersdarkthemeroundedbackground"
            android:gravity="center"
            android:text="Имя Фамилия"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/hatProfil"
            app:layout_constraintStart_toEndOf="@+id/imageProfil"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ProfilButtons"
        android:layout_width="match_parent"
        android:layout_height="484dp"
        android:gravity="center|top"
        app:layout_constraintTop_toBottomOf="@+id/Prodilinfo"
        app:layout_constraintBottom_toTopOf="@id/menuProfil"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center|top"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/buttonMyZakazi"
                android:layout_width="329dp"
                android:layout_height="55dp"
                android:text="@string/myzakazi_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:background="@drawable/topcornerslightggrayroundedbackground" />
            <Button
                android:id="@+id/buttonMyOtzivi"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:text="@string/myotzivi_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:background="#8D8D8D" />
            <Button
                android:id="@+id/buttonMyKarti"
                android:layout_width="329dp"
                android:layout_height="50dp"
                android:text="@string/mykarti_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:background="@drawable/bottomcornerslightgrayroundedbackground" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center|top"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/buttonCalendarDostavok"
                android:layout_width="329dp"
                android:layout_height="55dp"
                android:text="@string/calendardostavok_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:background="@drawable/topcornerslightggrayroundedbackground" />
            <Button
                android:id="@+id/buttonHideMagazini"
                android:layout_width="329dp"
                android:layout_height="47dp"
                android:text="@string/hidemagazini_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:background="#8D8D8D" />
            <Button
                android:id="@+id/buttonAdresaDostavok"
                android:layout_width="329dp"
                android:layout_height="50dp"
                android:text="@string/adresadostavok_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:background="@drawable/bottomcornerslightgrayroundedbackground" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center|top"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/buttonSettings"
                android:layout_width="329dp"
                android:layout_height="55dp"
                android:text="@string/settings_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:background="@drawable/topcornerslightggrayroundedbackground" />
            <Button
                android:id="@+id/buttonAboutPril"
                android:layout_width="329dp"
                android:layout_height="45dp"
                android:text="@string/aboutpril_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:background="#8D8D8D" />
            <Button
                android:id="@+id/buttonInfoForClient"
                android:layout_width="329dp"
                android:layout_height="50dp"
                android:text="@string/infoforclient_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10"
                android:background="@drawable/bottomcornerslightgrayroundedbackground" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menuProfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#616161"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/mag"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:contentDescription="@string/magazini_name"
                android:focusable="true"
                android:src="@drawable/map" />
            <TextView
                android:id="@+id/textMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-10dp"
                android:textColor="@color/black"
                android:text="@string/magazini_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/cat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/catalog_name"
                android:src="@drawable/catalog"/>
            <TextView
                android:id="@+id/textCat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/catalog_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/kor"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/korzina_name"
                android:src="@drawable/korzina"/>
            <TextView
                android:id="@+id/textKor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/korzina_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ak"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/akcii_name"
                android:src="@drawable/akzii"/>
            <TextView
                android:id="@+id/textAkz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/akcii_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/allcornersdarkthemeroundedbackground">
            <ImageView
                android:id="@+id/prof"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/profil_name"
                android:src="@drawable/profile"/>
            <TextView
                android:id="@+id/textPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:text="@string/profil_name"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>